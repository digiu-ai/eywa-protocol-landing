.mobile-menu
  display flex
  flex-direction column
  align-items center
  height 100%
  &__header
    cursor pointer
    display flex
    justify-content space-between
    align-items center
    margin-bottom 56px
    width calc(100% - 160px)
    padding 0 80px
    height 114px
    &._scrolled-header
      height 78px
  &__content
    padding 0 32px
    width calc(100% - 64px)
    flex-grow 1
    display flex
    flex-direction column
    align-items center
    justify-content space-between
    padding-bottom 16px
  &__links
    display flex
    flex-direction column
    width 100%
    &-nav
      display flex
      flex-direction column
      margin-bottom 32px
  &__item
    font-weight 500
    font-size 20px
    line-height 32px
    margin-bottom 24px
    letter-spacing 1px
    &:last-child
      margin-bottom 0
  &__subscribe
    width 100%


@media screen and (max-width: $desktop1)
  .mobile-menu
    &__header
      padding 0 32px
      height 98px
      width calc(100% - 64px)

@media screen and (max-width: $desktop2)
  .mobile-menu
    &__header
      height 78px
      padding 0 32px
      width calc(100% - 64px)

@media screen and (max-width: $mobile)
  .mobile-menu
    &__header
      padding 0 16px
      width calc(100% - 32px)
    &__content
      padding 0 16px
      width calc(100% - 32px)
      padding-bottom 16px
