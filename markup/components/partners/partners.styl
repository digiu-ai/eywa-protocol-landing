.partners
  display flex
  flex-direction column
  align-items center
  &__title
    font-weight 500
    font-size 16px
    line-height 20px
    margin-bottom 70px
  &__items
    display flex
    align-items center
  &__item
    margin-right 50px
    &:last-child
      margin-right 0

@media screen and (max-width: $mobile)
  .partners
    &__items
      flex-direction column
    &__item
      margin-right 0
      margin-bottom 54px
      &:last-child
        margin-bottom 0
