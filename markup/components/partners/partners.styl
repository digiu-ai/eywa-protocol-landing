.partners
  display flex
  flex-direction column
  align-items center
  &__title
    secondary-title()
    margin-bottom 70px
  &__items
    display flex
    align-items center
    width 700px
    justify-content space-around
    flex-wrap: wrap
  &__item
    display flex
    justify-content space-around
    width 180px
    margin-bottom 64px
    &._white-bg
      .partners__item-icon
        background: #fff
    &._xl
      width 260px
      .partners__item-icon
        max-width: 260px
    &-icon
      max-height 42px
      max-width: 180px
      cursor pointer

@media screen and (max-width: $mobile)
  .partners
    &__items
      flex-direction column
      width auto
    &__item
      margin-right 0
      margin-bottom 54px
      &:last-child
        margin-bottom 0
