$newsCardWidthDesktop = 416px
$newsCardWidthDesktop1 = 256px

.news
  display flex
  flex-direction column
  align-items center
  margin-bottom 160px
  &__title
    main-title()
  &__content
    display grid
    grid-auto-flow column
    grid-column-gap 32px
  &__item
    background-color #fff
    border-radius 4px
    max-width $newsCardWidthDesktop
    filter drop-shadow(0px 4px 40px rgba(171, 171, 171, 0.25))
    display flex
    flex-direction column
    &-img
      width $newsCardWidthDesktop
    &-content
      padding 24px
      box-sizing border-box
      display flex
      flex-direction column
      flex-grow 2
      &-date
        font-size 16px
        line-height 16px
        color #818EA7
        letter-spacing 0.1px
        margin-bottom 16px
      &-text
        font-weight 500
        font-size 24px
        line-height 34px
        color $text-black
        margin-bottom 16px
      &-more
        font-weight 500
        font-size 16px
        line-height 30px
        color $main-green
        cursor pointer
        margin-top auto

@media screen and (max-width: $desktop1)
  .news
    margin-bottom 108px
    &__item
      max-width $newsCardWidthDesktop1
      &-img
        width $newsCardWidthDesktop1
      &-content
        &-date
          font-size 14px
          line-height 16px
        &-text
          font-size 16px
          line-height 24px
        &-more
          font-size 14px
          line-height 16px

@media screen and (max-width: $desktop2)
  .news
    &__content
      padding 0 90px 50px
      width calc(100% - 180px)
      overflow auto
      grid-column-gap 16px
      &::-webkit-scrollbar
        height 4px
      &::-webkit-scrollbar-track
        background transparent
        border-radius 20px
      &::-webkit-scrollbar-thumb
        border-radius 20px
        background $main-green

@media screen and (max-width: $mobile)
  .news
    margin-bottom 80px
    &__content
      padding 0 16px 50px
      width calc(100% - 32px)