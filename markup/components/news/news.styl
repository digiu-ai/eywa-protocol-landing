$newsCardWidthDesktop = 416px
$newsCardWidthDesktop1 = 256px

.news
  display flex
  flex-direction column
  align-items center
  margin-bottom 160px
  &__title
    font-weight bold
    font-size 56px
    line-height 62px
    letter-spacing 1px
    margin-bottom 80px
  &__content
    display flex
  &__item
    background-color #fff
    border-radius 4px
    margin-right 32px
    max-width $newsCardWidthDesktop
    &:last-child
      margin-right 0
    &-img
      width $newsCardWidthDesktop
    &-content
      padding 24px
      &-date
        font-size 16px
        line-height 16px
        color #818EA7
        letter-spacing 0.1px
        margin-bottom 16px
      &-text
        font-weight 500
        font-size 24px
        line-height 34px
        color $text-black
        margin-bottom 16px
      &-more
        font-weight 500
        font-size 16px
        line-height 30px
        color $main-green
        cursor pointer

@media screen and (max-width: $desktop1)
  .news
    margin-bottom 108px
    &__title
      font-size 40px
      line-height 62px
      margin-bottom 64px
    &__item
      max-width $newsCardWidthDesktop1
      &-img
        width $newsCardWidthDesktop1
      &-content
        &-date
          font-size 14px
          line-height 16px
        &-text
          font-size 16px
          line-height 24px
        &-more
          font-size 14px
          line-height 16px

@media screen and (max-width: $desktop2)
  .news
    &__content
      padding 0 90px 50px
      width calc(100% - 180px)
      overflow auto
      &::-webkit-scrollbar
        height 4px
      &::-webkit-scrollbar-track
        background $main-green
        border-radius 20px
      &::-webkit-scrollbar-thumb
        background #FFFFFF
        border-radius 20px
    &__item
      margin-right 16px

@media screen and (max-width: $mobile)
  .news
    margin-bottom 80px
    &__title
      font-weight 500
      font-size 24px
      line-height 20px
      margin-bottom 32px
    &__content
      padding 0 16px 50px
      width calc(100% - 32px)