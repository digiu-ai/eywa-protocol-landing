include ../anchor/anchor.pug
mixin news(data)
    .news
        +anchor('news')
        .news__title News
        .news__content
            each val in news.list
                .news__item
                    img(src=val.img).news__item-img
                    .news__item-content 
                        .news__item-content-date #{val.date}
                        .news__item-content-text #{val.text}
                        a(href=val.href target='_blank').news__item-content-more Read more