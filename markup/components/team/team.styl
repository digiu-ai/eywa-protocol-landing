 .team
   margin-bottom 160px
   display flex
   flex-direction column
   align-items center
   &__title
    font-weight bold
    font-size 56px
    line-height 62px
    margin-bottom 104px
   &__list
    width calc(100% - 140px)
    justify-content center
    max-width: 1505px
    display grid
    grid-gap 56px 100px
    grid-template-columns repeat(auto-fill, 216px)
   &__item
     display flex
     align-items center
     justify-content space-around
     flex-direction column
     &-title
      font-weight 500
      font-size 24px
      line-height 32px
     &-subtitle
      font-weight normal
      font-size 16px
      line-height 24px
     &-img
      width: 216px
      margin-bottom 24px
   &__link
    font-weight normal
    font-size 16px
    line-height 24px
    color #3BC199

@media screen and (max-width: $desktop1)
  .team
    margin-bottom 110px
    &__title
      font-size 40px
      line-height 62px
      margin-bottom 64px
    &__list
      grid-gap 40px 128px
    &__item
      &-title
        font-size 20px
        line-height 30px
      &-img
        width 160px
    &__link
      font-size 16px
      line-height 24px

@media screen and (max-width: $desktop2)
  .team
    margin-bottom 90px
    &__title
      font-size 28px
      line-height 32px
    &__list
      grid-gap 32px 128px

@media screen and (max-width: $mobile)
  .team
    &__title
      font-size 24px
      line-height 20px
      margin-bottom 40px
      font-weight 500
    &__list
      grid-gap 25px 40px
      width calc(100% - 32px)
    &__item
      &-title
        font-size 14px
        line-height 20px
      &-img
        width 100px
      &-subtitle
        font-size 12px
        line-height 16px
    &__link
      font-size 12px
      line-height 16px
  
  
