.basics
  max-width 1088px
  display flex
  flex-direction column
  align-items center
  margin 0 auto 160px
  &__title
    font-weight bold
    font-size 56px
    line-height 64px
    margin-bottom 56px
    & > span
      color $main-green
  &__subtitle
    font-weight 500
    font-size 24px
    line-height 34px
    margin-bottom 48px
    text-align center
  &__list
    display grid
    grid-template-columns repeat(3, 1fr)
    grid-gap 32px
  &__item
    padding 40px
    background #fff
    border-radius 4px
    width 336px
    max-width 336px
    min-height 208px
    & > img
      margin-bottom 24px
    &-text
      font-weight 500
      font-size 24px
      line-height 34px
      color $text-black

@media screen and (max-width: $desktop1)
  .basics
    max-width 800px
    margin-bottom 108px
    &__title
      font-size 40px
      line-height 50px
      margin-bottom 40px
    &__subtitle
      font-size 20px
      line-height 34px
      margin-bottom 24px
    &__item
      padding 32px
      width 288px
      max-width 288px
      min-height 168px
      height 168px
      & > img
        width 64px
      &-text
        font-size 20px
        line-height 30px
        font-weight 500

@media screen and (max-width: $desktop2)
  .basics
    &__title
      font-size 28px
      line-height 32px
      margin-bottom 24px
    &__subtitle
      font-size 16px
      line-height 24px
      max-width 544px
    &__list
      grid-template-columns repeat(2, 1fr)
      grid-gap 16px
    &__item
      padding 24px 16px
      width 232px
      max-width 232px
      min-height 152px
      height 168px
      & > img
        width 56px
        margin-bottom 32px
      &-text
        font-size 16px
        line-height 24px

@media screen and (max-width: $mobile)
  .basics
    margin-bottom 80px
    padding 0 16px
    &__title
      font-size 24px
      line-height 32px
      margin-bottom 16px
      text-align center
    &__subtitle
      font-size 12px
      line-height 20px
      max-width 290px
    &__list
      grid-template-columns repeat(1, 1fr)
    &__item
      padding 32px 16px
      width 258px
      max-width 258px