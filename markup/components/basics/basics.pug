include ../anchor/anchor.pug
mixin basics(data)
    .basics
        +anchor('about')
        .basics__title Build your own interoperable DApps 
        .basics__subtitle EYWA is a cross-chain Data Protocol that implements philosophy of decentralization, security and equal opportunities to all.
        .basics__list 
            each val in basics.list
                .basics__item 
                    img(src=val.icon)
                    .basics__item-text #{val.label}