.welcome
  // margin 0 auto 160px
  // margin 0 auto calc(160px + 408px - 160px)
  // padding-top calc(130px + 114px)
  // padding-top calc(130px + 114px + 160px)
  height 100vh
  margin-bottom 160px
  display flex
  align-items center
  justify-content space-around
  &__inner
    display flex
    flex-direction column
    align-items center
  &__title
    font-weight 500
    font-size 88px
    line-height 72px
    text-align center
    & > span
      color $main-green

    margin-bottom 24px
  &__subtitle
    font-size 32px
    line-height 48px
    letter-spacing 1px
    margin-bottom 100px
    & > span
      color $main-green
      cursor pointer
  &__video
    margin-bottom 16px
  &__video-hint
    font-size 16px
    line-height 24px
    max-width 570px
    text-align center
    margin-bottom 56px
  &__buttons
    display flex
    width: 650px
  &__button
    margin-right 18px
    flex 1 0
    &:last-child
      margin-right 0

@media screen and (max-width: $desktop1)
  .welcome
    margin-bottom 108px
    &__title
      font-size 64px
      line-height 72px
    &__subtitle
      font-size 20px
      line-height 24px
    &__video-hint
      font-size 14px
      line-height 24px
    &__buttons
      width: 580px

@media screen and (max-width: $desktop2)
  .welcome
    &__title
      font-size 40px
      line-height 56px
      margin-bottom 8px
    &__subtitle
      font-size 14px
      line-height 24px
      margin-bottom 24px
    & > iframe
      width 256px
      height 136px
    &__video-hint
      font-size 12px
      line-height 18px
      margin-bottom 18px
      max-width 352px
    &__buttons
      width 460px

@media screen and (max-width: $mobile)
  .welcome
    width 100%
    box-sizing border-box
    padding 0 16px
    margin-bottom 80px
    &__inner
      width 100%
    &__title
      font-size 24px
      line-height 32px
    &__subtitle
      font-size 14px
      line-height 16px
    &__buttons
      flex-direction column
      width 100%
    &__video-hint
      width 290px
    &__button
      margin-right 0
      margin-bottom 8px
      min-height 48px
      &:last-child
        margin-bottom 0