.welcome
  margin 160px auto
  display flex
  flex-direction column
  align-items center
  &__title
    font-weight bold
    font-size 88px
    line-height 72px

    margin-bottom 24px
  &__subtitle
    font-size 32px
    line-height 48px
    letter-spacing 1px
    margin-bottom 56px
    & > span
      color #3BC199
  &__video
    margin-bottom 16px
  &__video-hint
    font-size 16px
    line-height 24px
    max-width 570px
    text-align center
    margin-bottom 56px
  &__buttons
    display flex
    width: 580px
  &__button
    margin-right 18px
    flex 1 0
    &:last-child
      margin-right 0

@media screen and (max-width: $desktop1)
  .welcome
    margin 120px auto
    &__title
      font-size 64px
      line-height 72px
    &__subtitle
      font-size 20px
      line-height 24px
    &__video-hint
      font-size 14px
      line-height 24px
    &__buttons
      width: 415px

@media screen and (max-width: $desktop2)
  .welcome
    margin 40px auto 80px
    &__title
      font-size 40px
      line-height 56px
      margin-bottom 8px
    &__subtitle
      font-size 14px
      line-height 24px
      margin-bottom 24px
    & > iframe
      width 256px
      height 136px
    &__video-hint
      font-size 12px
      line-height 18px
      margin-bottom 18px
      max-width 352px
    &__buttons
      width 350px

@media screen and (max-width: $mobile)
  .welcome
    &__title
      font-size 24px
      line-height 32px
    &__subtitle
      font-size 14px
      line-height 16px
    &__buttons
      flex-direction column
      width 290px
    &__button
      margin-right 0
      margin-bottom 8px
      min-height 48px
      &:last-child
        margin-bottom 0