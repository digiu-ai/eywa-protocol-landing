.roadmap
  width calc(100% - 140px)
  padding 0 70px
  margin-bottom 80px
  &__title
    text-align center
    margin-bottom 160px
    font-weight bold
    font-size 56px
    line-height 62px
    letter-spacing 1px
  &__content
    &-inner
      position relative
  &__list
    display grid
    grid-template-columns repeat(4, 1fr)
  &__year
    font-weight 500
    font-size 16px
    line-height 19px
    margin-bottom 8px
  &__quartal
    font-weight 500
    font-size 24px
    line-height 28px
    color $main-green
    margin-bottom 16px
  &__items
    position relative
  &__item
    display flex
    height: 100px
    margin-bottom 40px
    max-width 345px
    &:last-child
      margin-bottom 0
    &-icon
      margin-right 16px
      height 32px
      z-index 1
      &._unchecked
        height 24px
        margin-right 12px
        margin-left 4px
    &-text
      font-weight 500
      font-size 16px
      line-height 24px
  &__empty
    margin-bottom 40px
    width 32px
  &__horizontal-line
    height: 2px
    width: calc(100% + 70px)
    background-color $main-green
    position absolute
    top 86px
    &._second-row
      display: none
  &__vertical-line
    width: 2px
    left 15px
    top: 90px
    background-color $main-green
    position absolute
    &._mobile
      display none

@media screen and (max-width: $desktop1)
  .roadmap
    &__title
      font-size 40px
      line-height 62px
      margin-bottom 64px
    &__list
      grid-template-columns: repeat(2, 1fr)
      row-gap: 48px
    &__vertical-line
      display none
      &._mobile
        display block
    &__horizontal-line
      &._second-row
        display block
        width calc(100% + 140px)
        left -70px
        top 673px
    &__item
      height: 80px
      margin-bottom 24px

@media screen and (max-width: $desktop2)
  .roadmap
    padding 0
    width 100%
    &__content
      overflow auto
      &::-webkit-scrollbar
        height 4px
      &::-webkit-scrollbar-track
        background $main-green
        border-radius 20px
      &::-webkit-scrollbar-thumb
        background #FFFFFF
        border-radius 20px
      &-inner
        width 1688px
    &__list
      padding 0 70px 0 74px
      grid-template-columns: repeat(4, 1fr)
      grid-gap 0
      column-gap: 90px
    &__item
      min-width 345px
    &__horizontal-line
      left 74px
      &._second-row
        display none


@media screen and (max-width: $mobile)
  .roadmap
    &__title
      font-size 28px
      line-height 32px
      margin-bottom 40px
      font-weight 500
    &__year
      font-size 14px
      line-height 17px
      margin-bottom 0
    &__quartal
      font-size 20px
      line-height 24px
    &__list
      padding 0 16px 0 20px
    &__item
      min-width 245px
      &-text
        font-size 12px
        line-height 20px
    &__horizontal-line
      left 20px
      top 72px