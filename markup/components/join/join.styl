.join
  display flex
  align-items center
  flex-direction column
  margin-bottom 160px
  &__title
    main-title()
    margin-bottom 80px
    color $main-green
  &__content
    display flex
  &__section.section
    margin-right 32px
    width 560px
    &._with-logo
      background-image url('%=static=%general/just-logo.svg')
      background-repeat no-repeat
      background-position: bottom 42px right 44px
    &:last-child
      margin-right 0
  &__button
    min-width 240px

.section
  background #FFFFFF
  border-radius 8px
  padding 40px
  border 1px solid #E9EFF6
  &__title
    font-weight 500
    margin-bottom 24px
    color $text-black
  &__text
    font-weight normal
    font-size 16px
    line-height 24px
    color $text-black
    letter-spacing 0.01em
    margin-bottom 64px
    max-width 437px

@media screen and (max-width: $desktop1)
  .join
    margin-bottom 108px
    &__section.section
      max-width 480px
      &._with-logo
        background-size 65px 72px
  .section
    padding 40px 32px
    &__title
      font-size 20px
      line-height 30px
    &__text
      font-size 14px
      line-height 24px

@media screen and (max-width: $desktop2)
  .join
    &__section.section
      max-width 232px
      height 240px
      margin-right 16px
      &._with-logo
        background: #fff
    &__button
      min-width 0
  .section
    padding 24px 16px
    display flex
    flex-direction column
    &__title
      font-size 16px
      line-height 24px
      margin-bottom 16px
    &__text
      font-size 14px
      line-height 20px
      margin-bottom auto
      align-self flex-end

@media screen and (max-width: $mobile)
  .join
    margin-bottom 80px
    padding 0 16px
    &__content
      flex-direction column
    &__section.section
      margin-bottom 16px
      margin-right 0
      width calc(100% - 32px)
      max-width none
      height auto
      &:last-child
        margin-bottom 0
  .section
    &__text
      margin-bottom 16px
      align-self flex-start
    &__text
      margin-bottom 64px