// Common styles of the project

html, body
    height 100%
    font-family Rubik

body
    &._is-modal-open
        overflow-y hidden

.page
    // Стили для body

.page__wrapper
    min-height 100%


* html .page__wrapper
    height 100%

.page__buffer
    height 90px

.page__footer
    background url(%=static=%general/background.svg)

@media screen and (max-width: $mobile)
  .page__footer
    &__main
      background url(%=static=%general/background-mobile.svg)
      background-size cover